{{ form_start(form, {'attr' : {'class' : 'row'}}) }}
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="row col-md-4">
                <div class="row">
                    {{ form_widget(form.picture) }}
                </div>

                <div class="row input-field p-1">
                    {{ form_widget(form.title, {'attr' : {'placeholder' : 'Titre de l\'article'}}) }}
                    <span class="error-perso">{{ form_errors(form.title, {'attr' : {'class' : 'errors'}}) }}</span>
                </div>

                <div class="row p-1">
                    {{ form_label(form.categories) }}
                    {{ form_widget(form.categories, {'attr' : {'class' : 'form-select', 'rows' : '1'}}) }}
                </div>
            </div>
            <div class="row col-md-5">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr' : {'class' : 'materialize-textarea', 'rows' : '7', 'placeholder':'Le contenu de l\'article'}}) }}
            </div>
            <div class="row col-md-3">
                <div class="row m-1">
                    <p>
                        <label>
                            {{ form_widget(form.isPublished, {'attr' : {'class' : 'filled-in'}}) }}
                            <span>Publier</span>
                        </label>
                    </p>
                </div>
                <div class="row m-1">
                    <input type="submit" name="" value="Enregistrer" class="btn btn-primary">
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}