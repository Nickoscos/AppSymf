<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Welcome!{% endblock %} -  TACHES</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://kit.fontawesome.com/969a0e0f61.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="row mt-5">
                <div class="clo-md-12 text-center">
                    <h1>TACHES</h1>
                </div>
            </div>
            <div style="width:100%;">
                {% for message in app.flashes('warning') %}
                    <div class="aler alert-warning" style="width:100%;">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="aler alert-success" style="width:100%;">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <div class="row mt-5">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
